
@model IEnumerable<EmpPayrollMVCWithAjax.Models.EmpModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Emp",null,Context.Request.Scheme)','Add New Employee')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Add New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
               <img src="@Url.Content(item.ProfileImg)"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <div>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Emp",new {id=item.EmpID},Context.Request.Scheme)','Update Employee')" class="btn btn-info text-white">
                              <i class="fas fa-pencil-alt"></i> Edit</a>
                                <form asp-action="Delete" asp-route-id="@item.EmpID" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                   <input type="hidden" asp-for="@item.EmpID" />
                                   <input type="submit" value="Delete" class="btn btn-danger" />
                                   
                                </form>
                          </div>
            </td>
        </tr>
}
    </tbody>
</table>
